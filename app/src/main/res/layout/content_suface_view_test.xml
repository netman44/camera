    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <com.netman44.suferview.DemoSurfaceView
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
        <com.netman44.suferview.MyGameSurfaceView1
            android:id="@+id/MyGameSurfaceView1"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
        <com.netman44.suferview.MyGameSurfaceView2
            android:layout_marginTop="2dp"
            android:id="@+id/MyGameSurfaceView2"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
    </LinearLayout>

</ScrollView>
